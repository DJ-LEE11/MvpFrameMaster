<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_allFilled_style"
    android:background="@color/colorWindowBackground"
    android:padding="@dimen/layout_Margin_10" >

    <LinearLayout
        style="@style/layout_allWraped_style"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgError"
            android:layout_width="@dimen/error_img_width"
            android:layout_height="@dimen/error_img_height"
            android:layout_marginBottom="@dimen/layout_Margin_5"
            android:src="@mipmap/ic_error_network" />

        <TextView
            android:id="@+id/tvError"
            style="@style/item_tv_third_style"
            android:gravity="center"
            android:singleLine="false"
            android:text="@string/error_network" />
    </LinearLayout>

</RelativeLayout>